<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" >
     
   <f:Form id="myInqFilter"
			editable="true" class="sapUiContentPadding sapUiSizeCompact"  >
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="2"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					
					<f:formElements>
						<f:FormElement label="Inquiry Number" >
							<f:fields>
				            <Input id="fInq" placeholder="Enter" type="Number">  </Input>
							</f:fields>
					</f:FormElement>
					
					<f:FormElement label="Date Placed" >
							<f:fields>
				            <DatePicker id="fInqDate" value="" valueFormat="yyyy-MM-dd" displayFormat="long" class="sapUiSmallMarginBottom"/> 
							</f:fields>
					</f:FormElement>
						
					<f:FormElement label="Priority" visible='false'>
							<f:fields>
				            <ComboBox id="fInqPriority" placeholder="Select">
            <items>
              <core:Item key="t0" text="Very High" />
              <core:Item key="t1" text="High" />
              <core:Item key="t11" text="Medium" />
              <core:Item key="t2" text="Low" />     
               
              </items>
              </ComboBox>
			                </f:fields>
					</f:FormElement>
						
					 
					
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	 
     
</core:FragmentDefinition>