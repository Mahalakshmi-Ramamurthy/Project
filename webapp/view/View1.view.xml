<mvc:View controllerName="com.cam.camera.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						 <HBox justifyContent="SpaceAround">
    <items>
     <Button text="Capture Photo" press="onCapture"></Button>
     <Button text="Select Photo" press="onSelect"></Button>
    </items>
   </HBox>
   <HBox width="100%" justifyContent="Center">
    <items>
     <Image width="300px" height="300px" id="myImage"></Image>
    </items>
   </HBox>
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>